<% if user.avatar? %>
  <%= image_tag user.avatar, width: "100%" if user.avatar? %><br />
<% else %>
  <img src="https://api.fnkr.net/testimg/200x200/00CED1/FFF/?text=img+placeholder">
<% end %>  
      
<h3> <%= user.name %></h3><br>
<p><%= user.introduction %></p>
<%= link_to tweets_user_path(user) do %>
  <h3>Tweets <%=user.tweets.size %></h3>
<%end%>
<%= link_to followings_user_path(user) do %>
  <h3>Followings <%=user.followings.size %></h3>
<% end %>
<%= link_to followers_user_path(user) do %>
  <h3>Followers <%=user.followers.size %></h3>
<% end %>
<%= link_to likes_user_path(user) do %>
  <h3>Likes <%= user.likes.size %></h3>
<% end %>

<p>
  <% if @user.email == current_user.email %>
    <%= link_to 'Edit Profile', edit_user_path(@user), class: "btn btn-primary" %>
  <% end %>  
</p>